                      <a href="/user/product_one/<%= product.ProductId %>"> <img src="/<%= product.productId && product.productId.image && product.productId.image[0] %>" alt="Image" class="img-fluid"> </a>
                    </td>
                    <td>
                        <p>
                            <a href="/user/product_one/<%= product.productId %>"> <span class="text-success fw-semibold product-name"><%= product.productId.pname %></span> </a>  <br>
                             <span class="text-muted product-details" ><%= product.productId.details %></span> <br>
                             <span class="">â‚¹ <%= product.productId.price %></span>
                        </p>
                    </td>
                    <td><a href="/delete/<%= product.productId._id %>"  class="btn btn-primary btn-sm" id="remove" >X</a></td>
                  </tr>
                  <% }) %>
                </tbody>
                <% } %>
              </table>
             
